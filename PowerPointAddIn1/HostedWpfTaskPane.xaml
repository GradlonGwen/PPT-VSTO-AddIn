<UserControl x:Class="PowerPointAddIn1.HostedWpfTaskPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerPointAddIn1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI"
             FontSize="12">
    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Select one:" Height="20" VerticalAlignment="Top" Margin="10, 10, 0, 0"></TextBlock>
        <ComboBox Grid.Column="1" Margin="10, 10, 10, 0" Height="20" VerticalAlignment="Top">
            <ComboBox.Items>
                <ComboBoxItem>Chocolate</ComboBoxItem>
                <ComboBoxItem>Coffee</ComboBoxItem>
                <ComboBoxItem>Tea</ComboBoxItem>
                <ComboBoxItem>Goblin soup</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
    </Grid>
</UserControl>
